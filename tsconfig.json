{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "lib": ["ES2019", "DOM"],
        "outDir": "./dist/types",
        "strict": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": false,
        "jsx": "react",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.test.ts", "node_modules", "build", "dist"]
}
